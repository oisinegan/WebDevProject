{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="h3 mb-3 font-weight-normal">Band</h1>
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.name, {
        label: 'Band Name: '
    }) }}
    {{ form_row(registrationForm.bandMembers, {
        label: 'Band Members: '
    }) }}
    {{ form_row(registrationForm.genre, {
        label: 'Genre: '
    }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password: '
        }) }}
    {{ form_row(registrationForm.price, {
            label: 'Price: '
        }) }}

        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    <br>
    <h3>Already have an account? <a href="{{ path('app_band') }}"> Login </a></h3>
    {{ form_end(registrationForm) }}
{% endblock %}
